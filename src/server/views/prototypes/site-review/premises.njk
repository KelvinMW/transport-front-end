{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = 'Premises' %}

{% block content %}

<form>
  <div class="form-group">
    <fieldset>
      <legend>
        <h1 class="heading-medium">
          Please select an option below
        </h1>
      </legend>
      <div class="multiple-choice">
        <input id="example-multiple-email-1" type="radio" name="radio-two-targets-group" value="Yes">
        <label for="example-multiple-email-1">
          E-mail
        </label>
      </div>
      <div class="multiple-choice" data-target="enter-more-info-panel">
        <input id="example-multiple-phone-1" type="radio" name="radio-two-targets-group" value="No">
        <label for="example-multiple-phone-1">
          Phone (more info required)
        </label>
      </div>
      <div class="multiple-choice" data-target="enter-more-info-panel">
        <input id="example-multiple-text-1" type="radio" name="radio-two-targets-group" value="Text">
        <label for="example-multiple-text-1">
          Text message (more info required)
        </label>
      </div>
      <div class="panel panel-border-narrow js-hidden" id="enter-more-info-panel">
        <label class="form-label" for="more-info-message">
          Enter more info
        </label>
        <input class="form-control" name="more-info-message" type="text" id="more-info-message">
      </div>
    </fieldset>
  </div>
</form>
{% endblock %}
