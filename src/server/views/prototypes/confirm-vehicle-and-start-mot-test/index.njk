{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Confirm vehicle and start mot test' %}

{% block content %}

  <header class="content-header">
    <h1>
      <span class="content-header__type">MOT testing</span>
      <span class="content-header__title">Confirm vehicle and start test</span>
    </h1>
  </header>

  <form method="post" name="StartTestConfirmation" id="StartTestConfirmation">
    <div class="text">
      <p class="lede">Check that you have the right vehicle before starting the test.</p>
    </div>

    <div class="message message--important">
      <p>Testing this vehicle today will not preserve the current expiry date.</p>
      <p>To preserve the date the earliest the vehicle can be tested is
        <span>23 December 2018</span>.</p>
    </div>

    <h2 class="heading-medium">Vehicle specification</h2>
    
    <table class="table-summary">
      <tbody>
        <tr>
          <th scope="row" class="table-summary__key">Make and model</th>
          <td class="table-summary__value">
            CITROEN, RELAY
            <a href="#" id="change-vehicle-make" class="table-summary__action">Change
              <span class="visuallyhidden"> make and model</span>
            </a>
          </td>
        </tr>
        <tr>
          <th scope="row" class="table-summary__key">Engine</th>
          <td class="table-summary__value">
            Diesel, 2198
            <a href="#" id="change-vehicle-engine" class="table-summary__action">Change
              <span class="visuallyhidden"> engine or fuel type</span>
            </a>
          </td>
        </tr>
        <tr>
          <th scope="row" class="table-summary__key">Colour</th>
          <td class="table-summary__value">
            White
            <a href="#" id="change-vehicle-colour" class="table-summary__action">Change
              <span class="visuallyhidden"> colour</span>
            </a>
          </td>
        </tr>
        <tr>
          <th scope="row" class="table-summary__key">Brake test weight</th>
          <td class="table-summary__value" id="vehicleWeight">
            3500 kg </td>
        </tr>
      </tbody>
    </table>

    <h2 class="heading-medium">Vehicle registration </h2>
    <table class="table-summary">
      <tbody>
        <tr>
          <th scope="row" class="table-summary__key">Registration mark</th>
          <td class="table-summary__value" id="vehicleRegistrationNumber">
            AD33XCP </td>
        </tr>
        <tr>
          <th scope="row" class="table-summary__key">VIN</th>
          <td class="table-summary__value" id="vehicleVINnumber">
            PCXDAKAAAAA882103 </td>
        </tr>
        <tr>
          <th scope="row" class="table-summary__key">Country of registration</th>
          <td class="table-summary__value">
            GB, UK, ENG, CYM, SCO (UK) - Great Britain
            <a href="#"
              id="change-vehicle-country-of-registration" class="table-summary__action">Change
              <span class="visuallyhidden"> country of registration</span>
            </a>
          </td>
        </tr>
        <tr>
          <th scope="row" class="table-summary__key">
            MOT test class
          </th>
          <td class="table-summary__value">
            7
            <a href="#" id="change-vehicle-class" class="table-summary__action">Change
              <span class="visuallyhidden"> test class</span>
            </a>
          </td>

        </tr>
        <tr>
          <th scope="row" class="table-summary__key">
            Vehicle category
          </th>
          <td class="table-summary__value">
            Not available </td>
        </tr>
        <tr>
          <th scope="row" class="table-summary__key">Date of first use</th>
          <td class="table-summary__value">
            10 March 2016 </td>
        </tr>
        <tr>
          <th scope="row" class="table-summary__key">MOT expiration date</th>
          <td class="table-summary__value">
            22 January 2019 </td>
        </tr>
      </tbody>
    </table>


    <fieldset>
      <div class="form-group">
        <nav class="content-navigation">
          <ul class="list-unstyled content-navigation__split u-clearfix">
            <li class="content-navigation__split--left">
              <input type="submit" value="Confirm and start test" class="button " id="confirm_vehicle_confirmation" />
            </li>
            <li class="content-navigation__split--right">
              <a class="button button--alert" id="refuse-to-test" href="#">Refuse to test</a>

            </li>
          </ul>

          <ul class="content-navigation__secondary">
            <li>
              <br />
              <a href="#">Cancel and return to find a vehicle</a>
            </li>
          </ul>
        </nav>
      </div>
    </fieldset>
</form>
  
{% endblock %}