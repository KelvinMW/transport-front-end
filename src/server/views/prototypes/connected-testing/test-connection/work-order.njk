{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Create a notification' %}

{% set pageBreadcrumbItems = [
  { text: 'Home', url: '/prototypes/connected-testing' },
  { text: 'WILLETTA AREDONDO', url: '/prototypes/self-serve-api-key' },
  { text: 'DILENA GROUP', url: '/prototypes/index' },
  { text: 'Test connection', url: '/prototypes/connected-testing/test-connection/index' }
] %}

{% set message = viewData %}

{% set canBeArchived = message.type !== 'Special notice' and (message.state.rejected or message.state.accepted) and not message.state.isArchived %}

{% block content %} 

  {% call components.gridRow() %}

    {% call components.columnTwoThirds() %}
        <span class="heading-secondary">Test connection</span>
        <h1 class="govuk-heading-xl">Perform a test to check your connection</h1>

        <p>To check your connection, we will send some vehicle data to your connected equipment.</p>
        <p>Once you have received this data, you need to perform a test. You can use any vehicle but instead of registering it, use our data.</p>

        <div class="govuk-inset-text">
            <p>You can perform a test with more than one piece of connected equipment at a time.</p>
        </div>

        <a href="/prototypes/connected-testing/test-connection/confirmation" class="govuk-button" data-module="govuk-button">Send data</a>

        <p style=""><a href="../index">Return to Vehicle Testing Station</a></p>
      
    {%- endcall %}

  {%- endcall %}
  
{% endblock %}