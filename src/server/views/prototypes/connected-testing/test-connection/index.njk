{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Create a notification' %}

{% set pageBreadcrumbItems = [
  { text: 'Home', url: '/prototypes/connected-testing' },
  { text: 'WILLETTA AREDONDO', url: '/prototypes/self-serve-api-key' },
  { text: 'DILENA GROUP', url: '/prototypes/index' },
  { text: 'Test connection', url: '/prototypes/connected-testing/test-connection/index' }
] %}

{% set message = viewData %}

{% set canBeArchived = message.type !== 'Special notice' and (message.state.rejected or message.state.accepted) and not message.state.isArchived %}

{% block content %} 

  {% call components.gridRow() %}

    {% call components.columnTwoThirds() %}
      <span class="heading-secondary">Test connection</span>
      <h1 class="govuk-heading-l">Test the connection for your connected equipment</h1>
       
      <p class="govuk-body">Once the engineer installed your connected equipment and the key, use this service to check if the equipment can tranfer results to the MOT testing service.</p>
      <p> You will need to go away and perform a test on a vehicle during this journey.</p>

      <div class="govuk-inset-text">
        <p>You will not lose a test slot by using this service.</p>
        <p>You can use this service even if you are not authorised to test yet.</p>
      </div>

      <a href="#" role="button" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start" data-module="govuk-button">
        Start now
        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
          <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
        </svg>
      </a>

      <h2 class="govuk-heading-m">Before you start</h2>

      <p class="govuk-body">Make sure you've:</p>

      <ul class="govuk-list list-bullet">
        <li>informed DVSA of<a class="govuk-link" href="/prototypes/connected-testing/change-testing-equipment/index"> changes to your equipment</a></li>
        <li><a class="govuk-link" href="/prototypes/connected-testing/self-serve-api-key/index">requested a key</a> for your connected equipment</li>
      </ul>
    
      <p style="margin-top: 40px;"><a href="../index">Return to Vehicle Testing Station</a></p>
      
    {%- endcall %}

  {%- endcall %}
  
{% endblock %}