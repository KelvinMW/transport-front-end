{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Create a notification' %}

{% set pageBreadcrumbItems = [
  
] %}

{% set message = viewData %}

{% set canBeArchived = message.type !== 'Special notice' and (message.state.rejected or message.state.accepted) and not message.state.isArchived %}

{% block content %} 

  {% call components.gridRow() %}

    {% call components.columnTwoThirds() %}
      
      <div class="govuk-panel govuk-panel--confirmation">
        <h1 class="govuk-panel__title">Your key has been created</h1>
      </div>

      <h2 class="govuk-heading-m">What happens next</h2>
      <p>You will need to share the key with the engineer when they are installing your equipment.</p>
      <p>View your keys on the "Site's keys" page. This page can also be accessed from the VTS Overview page.</p>

      <div class="govuk-inset-text">
        <p>You must only share this key with the engineer installing your equipment.</p>
      </div>

      <a href="site-keys" role="button" draggable="false" class="govuk-button govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-7"  data-module="govuk-button">
        Site's keys
      </a>

      <p><a href="../index">Return to VTS Overview</a></p>
      
    {%- endcall %}

  {%- endcall %}
  
{% endblock %}