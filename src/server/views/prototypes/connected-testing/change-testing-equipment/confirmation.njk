{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Create a notification' %}

{% set pageBreadcrumbItems = [

] %}

{% set message = viewData %}

{% set canBeArchived = message.type !== 'Special notice' and (message.state.rejected or message.state.accepted) and not message.state.isArchived %}

{% block content %} 

  {% call components.gridRow() %}

    {% call components.columnTwoThirds() %}
     
      <div class="govuk-panel govuk-panel--confirmation">
        <h1 class="govuk-panel__title">Your changes have been submitted</h1>
      </div>

      <h2 class="govuk-heading-m" style="margin-bottom: 10px;">What happens next</h2>
      <p style="margin-bottom: 30px;">The Vehicle Examiner will check the equipment at the next site visit.</p>

      <h2 class="govuk-heading-m" style="margin-bottom: 10px;">Connected equipment</h2>
      <p>You need a software code (called a 'key') to connect your equipment to the MOT testing service if it is connected equipment.</p>

      <a href="../self-serve-api-key/type-of-equipment" role="button" draggable="false" class="govuk-button govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-7"  data-module="govuk-button">
        Get a key
      </a>

      <p><a href="../index">Return to VTS Overview</a></p>
      
    {%- endcall %}

  {%- endcall %}
  
{% endblock %}