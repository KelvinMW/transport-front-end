{% extends 'layouts/mts.layout.njk' %}

{% set pageTitle = 'Create a notification' %}

{% set pageBreadcrumbItems = [
  { text: 'Back', url: '/prototypes/connected-testing/change-testing-equipment/type-of-equipment' }
] %}

{% set message = viewData %}

{% set canBeArchived = message.type !== 'Special notice' and (message.state.rejected or message.state.accepted) and not message.state.isArchived %}

{% block content %} 

  <script type="text/javascript">
      function changeLink()
      {
        document.getElementById("continue").href="not-approved-equipment";
        return false;
      }
  </script>

  {% call components.gridRow() %}

    {% call components.columnTwoThirds() %}
       
      <span class="heading-secondary">Tell us about changes to your equipment</span>
      <h1 class="govuk-heading-xl">Is the new equipment on the list of DVSA approved testing equipment?</h1>

      <form class="form">
        <div class="govuk-form-group">
          <fieldset class="govuk-fieldset">
            <div class="govuk-radios">
              <div class="govuk-radios__item" style="display: inline-block; margin-right: 15px;">
                <input class="govuk-radios__input" id="approved-equipment" name="approved-equipment" type="radio" value="Yes" >
                <label class="govuk-label govuk-radios__label" for="approved-equipment-1">
                  Yes
                </label>
              </div>
              <div class="govuk-radios__item" style="display: inline-block;">
                <input class="govuk-radios__input" id="approved-equipment-2" name="approved-equipment" onclick="changeLink();" type="radio" value="No">
                <label class="govuk-label govuk-radios__label" for="approved-equipment-2">
                  No
                </label>
              </div>
            </div>
          </fieldset>
        </div>

        <details class="govuk-details" data-module="govuk-details">
          <summary class="govuk-details__summary">
            <span class="govuk-details__summary-text">
              Help with approved equipment
            </span>
          </summary>
          <div class="govuk-details__text">
            <p>Any new or replacement equipment must be on the list of <a href="https://www.gov.uk/government/publications/mot-centre-approved-testing-equipment?_ga=2.249196999.1555777727.1586952526-1466360154.1570439560">DVSA approved testing equipment</a>.</p>
          </div>
        </details>

        <a href="reduce-clearance" id="continue" class="govuk-button" data-module="govuk-button">Continue</a>
      </form>

      <p><a href="../index">Return to Vehicle Testing Station</a></p>
      
    {%- endcall %}

  {%- endcall %}
 
{% endblock %}