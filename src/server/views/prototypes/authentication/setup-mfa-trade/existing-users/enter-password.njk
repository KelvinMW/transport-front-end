{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = 'Set up account security' %}

{% block content %}

  {% call components.gridRow() %}

    {% call components.columnFull() %}

    <header class="content-header" style="margin-top: 35px;" >
      <span class="govuk-caption-xl">Your profile</span>
      <h1 class="govuk-heading-xl">Change to smartphone app <br>account security</h1>
    </header>

      <div class="text u-clearfix">
        {{ components.paragraph(text='For security, enter your password again to continue.', lead=true) }}


      <form action="/docs/examples/pass-data/vehicle-type" method="post" class="form">

        <div class="govuk-form-group">
          <h1 class="govuk-label-wrapper">
            <label class="govuk-label govuk-label" for="width-10">
              Your password
            </label>
          </h1>
          <input class="govuk-input govuk-input--width-20" id="registration-number" name="phone-number" value="{{ data['phone-number'] }}" type="text" for="width-10">
        </div>

      </form>

      <div class="u-margin-top-10 u-margin-bottom-30">
        {{ components.button(text='Continue', url='/prototypes/authentication/setup-mfa-trade/existing-users/set-up-start') }}
      </div>



     
    {%- endcall %}

  {%- endcall %}
  
{% endblock %}