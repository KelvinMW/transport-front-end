    ]
  ) }}

  <h2 class="heading-medium">
    Split journey to 3 questions
  </h2>

  {{ components.list(
    type='bullet',
    items=[
      {
        url: '/prototypes/moth/split-page-1-of-3',
        text: 'Split page 1'
      },
      {
        url: '/prototypes/moth/split-page-2-of-3',
        text: 'Split page 2'
      },
      {
        url: '/prototypes/moth/split-page-3-of-3',
