{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = "What is the vehicle's registration number - MOT History" %}

{% block content %}

  {{
    components.link(
      text='Back',
      url='/prototypes/moth',
      back=true
    )
  }}

  <div class="grid-row">
    <div class="column-two-thirds">
      <form action="">
        <fieldset>
          <legend>
            <h1 class="heading-large">
              Would you like to see the test locations?
            </h1>
          </legend>

          <div class="form-group">
            <div class="multiple-choice" data-target="v5c-form">
              <input id="radio-1" type="radio" name="radio-group" value="yes">
              <label for="radio-1">Yes</label>
            </div>

            <div class="panel panel-border-narrow js-hidden" id="v5c-form">
              <div class="form-group">
                <label class="form-label form-label-bold" for="v5cInput">
                  Enter vehicle V5C
                  <span class="form-hint">
                    11 digits from the vehicle log book
                  </span>
                </label>

                <input class="form-control" type="text" id="v5cInput" name="v5cInput">
              </div>
            </div>

            <div class="multiple-choice">
              <input id="radio-2" type="radio" name="radio-group" value="no">
              <label for="radio-2">No</label>
            </div>
          </div>
        </fieldset>

        <div class="form-group">
          <input type="submit" name="submit" class="button" value="Continue">
        </div>
      </form>
    </div>
  </div>
  
{% endblock %}