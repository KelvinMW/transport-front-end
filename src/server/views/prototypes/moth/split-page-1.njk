{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = "What is the vehicle's registration number - MOT History" %}

{% block content %}

  {{
    components.link(
      text='Back',
      url='/prototypes/moth',
      back=true
    )
  }}

  <form action="">
    <fieldset>
      <legend>
        <h1 class="heading-large">
          What type of vehicle are you look for?
        </h1>
      </legend>

      <div class="form-group">
        <div class="multiple-choice">
          <input id="radio-1" type="radio" name="radio-group" value="Regular">
          <label for="radio-1">Regular vehicle</label>
        </div>

        <div class="multiple-choice">
          <input id="radio-2" type="radio" name="radio-group" value="hgv">
          <label for="radio-2">HGV vehicle</label>
        </div>
      </div>
    </fieldset>

    <div class="form-group">
      <input type="submit" name="submit" class="button" value="Continue">
    </div>
  </form>
  
{% endblock %}