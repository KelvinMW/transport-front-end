{% extends 'layouts/mts-without-container.layout.njk' %}
 {% set pageTitle = 'homepage' %}
 {% set pageBreadcrumbItems = [
  { text: 'Home', url: '/prototypes' },
  { text: 'MOT test results', url: '/prototypes/mot-test' },
  { text: 'Brake test' }
] %}
 {% block content %}
 <main id="content">
     <a href="/prototypes/recalls/V3/start-page" class="link-back">Back</a> 
     <header class="content-header">
        <h1 class="heading-large heading heading--page-heading heading--small-margin-bottom">
                What type of recall are you checking?</h1>
    </header>                       
     <div class="row contents">
        <div class="col-lg-12">
     <div class="grid-row">
    <div class="column-three-quarters">
        <form>
            <div class="form-group">
                <fieldset>
                 <div class="multiple-choice">
                    <input id="recalls-vehicle" type="radio" name="radio-recalls-group" value="vehicle">
                    <label for="recalls-vehicle">A vehicle</label>
                </div>
                <div class="multiple-choice">
                    <input id="recalls-other" type="radio" name="radio-recalls-group" value="other">
                    <label for="recalls-other">Other equipment<span class="form-hint">For example, tyres or child seats</span></label>
                </div>
                </fieldset>
            </div>
        </form>


        <div>
            <a class="button" id="continue" href="/prototypes/recalls/V3/vehicle-type" style="margin-bottom:30px">Continue</a>
        </div>

        <h3 class="heading-medium">Download recall information</h3>
            <ul>
                <li>
                    <i class="icon icon-file-download"></i>
                    <a href="" rel="external">All recalls since 1992 (CSV, {File size})</a>
                </li>
                <li class="u-margin-top-20">
                    <i class="icon icon-file-download"></i>
                    <a href="" rel="external">Recalls data guide (PDF, {File size})</a>
                </li>
            </ul>
    </div>
</div>  
           
 </main>
 {% endblock %} 
