{% extends "layouts/mts.layout.njk" %}

{% block page_title %}
  Find MOT location
{% endblock %}


{% block content %}

<style>
li{
  margin: 15px 0;
}
</style>

<main id="content" role="main">
  <div class="grid-row">
    <div class="column-two-thirds">

      <a class="link-back" href="../index">Back</a>

      <h1 class="heading-xlarge">Find local MOT test centre
      </h1>
      </div>
      </div>

      <div class="grid-row">
      <div class="column-one-third">

      <form>
            <div class="form-group">
            <h2 class="heading-small">Postcode or Town
            </h2>
            <div class="form-group">
              <fieldset>
                <div class="form-group">
                  <label for="location" class="visuallyhidden">
                  </label>
                  <input id="location" name="location" class="form-control" style="width:100%;" type="text" placeholder="e.g. SW1A 2AA or Bakewell" value=" ">
                    <div class="form-group" style="Margin-top: 15px">
                        <label class="form-label" for="select-box" style="font-weight: Bold">Distance</label>
                        <select class="form-control" style="width:100%; Margin-top: 10px" id="select-box" name="select-box">
                            <option>5 Miles</option>
                            <option>10 Miles</option>
                            <option>15 Miles</option>
                            <option>25 Miles</option>
                            <option>50 Miles</option>
                        </select>
                    </div>

                    <legend>
                        <span class="body-text">Filter results by vehicle type</span>
                        </legend>
                    <div class="multiple-choice">
                        <input id="vehicle-type-1" name="vehicle-types" type="checkbox" value="vehicle-small-engine-mototcycle">
                        <label for="vehicle-type-1">&lt; 200cc motorcycle</label>
                    </div>
                    <div class="multiple-choice">
                        <input id="vehicle-type-2" name="vehicle-types" type="checkbox" value="vehicle-mototcycle">
                        <label for="vehicle-type-2"> &gt; 200cc motorcycle</label>
                    </div>
                    <div class="multiple-choice">
                        <input id="vehicle-type-3" name="vehicle-types" type="checkbox" value="vehicle-three-wheel">
                        <label for="vehicle-type-3">3-wheeled vehicles</label>
                    </div>
                    <div class="multiple-choice">
                        <input id="vehicle-type-4" name="vehicle-types" type="checkbox" value="vehicle-car">
                        <label for="vehicle-type-4">Cars and vans</label>
                    </div>
                    <div class="multiple-choice">
                        <input id="vehicle-type-5" name="vehicle-types" type="checkbox" value="vehicle-passanger">
                        <label for="vehicle-type-5">Passenger vehicles</label>
                    </div>
                    <div class="multiple-choice">
                        <input id="vehicle-type-6" name="vehicle-types" type="checkbox" value="vehicle-goods-vehicle">
                        <label for="vehicle-type-6">Goods vehicles</label>
                    </div>

                  <a class="button button-filter-search" href="#" type="submit" style="margin-top: 15px;">Update search</a>
                  <span id="error-message"></span>
                </div>
              </fieldset>
            </div>
            
          </form>

          <div style="border-top: 5px solid #005ea5; margin-top: 30px;">
                <h2 class="bold-small" style="margin-top:20px;"> More information on the MOT test</h2>
                    <ul class="list list-bullet">
                        <li>
                            <a href="https://www.gov.uk/getting-an-mot" target="_blank">
                                When to get an MOT?
                            </a>
                        </li>
                        <li>
                            <a href="https://www.gov.uk/getting-an-mot/mot-test-fees" target="_blank">
                                Costs of an MOT test
                            </a>
                        </li>
                         <li>
                            <a href="https://www.gov.uk/getting-an-mot/booking-an-mot" target="_blank">
                                How to book an MOT test?
                            </a>
                        </li>
                    </ul>
          </div>

          <div>
                <h2 class="bold-small"> You can also</h2>
                    <ul class="list list-bullet">
                        <li>
                            <a href="https://www.gov.uk/check-mot-history" target="_blank">
                                Check your vehicle MOT history
                            </a>
                        </li>
                        <li>
                            <a href="https://www.gov.uk/check-vehicle-tax" target="_blank">
                                Check your vehicles tax status
                            </a>
                        </li>
                        <li>
                            <a href="https://www.gov.uk/mot-reminder" target="_blank">
                                Sign up for MOT reminders
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Check vehicle safety recalls
                            </a>
                        </li>

                    </ul>
          </div>


          </div>
          </div>

          <div class="column-two-thirds">
            <nav>
                <div>
                    <p>Showing <Strong style="font-weight: Bold; font-size: 24px">0 </strong>of <Strong style="font-weight: Bold; font-size: 24px">0 </strong>results</p>
                </div>
            </nav>
            <hr style="margin-top: 5px">
            <nav>
                <div>
                    <Strong style="font-weight: Bold; font-size: 19px">Sorted by</strong>
                     <select class="form-control form-control-1-4" id="select-box" name="select-box">
                        <option value="one">Distance</option>
                        <option value="two">Alphabetical A - Z</option>
                        <option value="three">Alphabetical Z - A</option>
                    </select>
                    <a href="#" style="float: right; font-size: 19px; margin-top: 15px">View on map</a>
                </div>
            </nav>

          <hr >

          <div class="list active">
                                
                <p class="bold-small" style="margin-top:22px;">Please try:</p>
                <ul class="list list-bullet">
                    <li><a href="../index">searching again</a> using different spelling or words</li>
                <li>
                    removing your filters
                </li>
                </ul>


                <hr>
           </div>


          

     

    </div>
  </div>
</main>

{% endblock %}